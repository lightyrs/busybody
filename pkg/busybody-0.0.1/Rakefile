require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('busybody', '0.0.1') do |p|
  p.description    = "A gem that fetches the primary twitter and facebook urls from any website."
  p.url            = "http://github.com/lightyrs/busybody"
  p.author         = "Harris Novick"
  p.email          = "harris @nospam@ harrisnovick.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end